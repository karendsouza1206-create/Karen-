#include <stdbool.h>
#include <string.h>

bool isValid(char* s) {
    int len = strlen(s);
    char stack[len];
    int top = -1;

    for (int i = 0; i < len; i++) {
        char c = s[i];

        // opening brackets
        if (c == '(' || c == '{' || c == '[') {
            stack[++top] = c;
        }
        // closing brackets
        else {
            if (top == -1)
                return false;

            char t = stack[top--];

            if ((c == ')' && t != '(') ||
                (c == '}' && t != '{') ||
                (c == ']' && t != '[')) {
                return false;
            }
        }
    }

    return top == -1;
}
