int dfs(struct TreeNode* root, int current) {
    if (root == NULL)
        return 0;

 
    current = current * 2 + root->val;

 
    if (root->left == NULL && root->right == NULL)
        return current;

    return dfs(root->left, current) + dfs(root->right, current);
}

int sumRootToLeaf(struct TreeNode* root) {
    return dfs(root, 0);
}
