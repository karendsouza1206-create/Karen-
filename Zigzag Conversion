#include <stdio.h>
#include <stdlib.h>
#include <string.h>

char* convert(char* s, int numRows) {
    if (numRows == 1) return s;

    int len = strlen(s);
    char **rows = (char**)malloc(numRows * sizeof(char*));

    for (int i = 0; i < numRows; i++) {
        rows[i] = (char*)malloc((len + 1) * sizeof(char));
        rows[i][0] = '\0';
    }

    int currentRow = 0;
    int direction = 1;

    for (int i = 0; i < len; i++) {
        int l = strlen(rows[currentRow]);
        rows[currentRow][l] = s[i];
        rows[currentRow][l + 1] = '\0';

        if (currentRow == 0)
            direction = 1;
        else if (currentRow == numRows - 1)
            direction = -1;

        currentRow += direction;
    }

    char *result = (char*)malloc((len + 1) * sizeof(char));
    result[0] = '\0';

    for (int i = 0; i < numRows; i++) {
        strcat(result, rows[i]);
        free(rows[i]);
    }
    free(rows);

    return result;
}
