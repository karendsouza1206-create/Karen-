#include <stdio.h>
#include <stdlib.h>
#include <string.h>

void expand(char* s, int left, int right, int* start, int* maxLen) {
    int n = strlen(s);
    
    while (left >= 0 && right < n && s[left] == s[right]) {
        left--;
        right++;
    }
    
    int len = right - left - 1;  // actual palindrome length
    
    if (len > *maxLen) {
        *maxLen = len;
        *start = left + 1;
    }
}

char* longestPalindrome(char* s) {
    int n = strlen(s);
    if (n < 2) return s;

    int start = 0;
    int maxLen = 1;

    for (int i = 0; i < n; i++) {
        // Odd length
        expand(s, i, i, &start, &maxLen);
        
        // Even length
        expand(s, i, i + 1, &start, &maxLen);
    }

    char* result = (char*)malloc(maxLen + 1);
    strncpy(result, s + start, maxLen);
    result[maxLen] = '\0';

    return result;
}
