int* constructTransformedArray(int* nums, int numsSize, int* returnSize) {
     int* result = (int*)malloc(numsSize * sizeof(int));
    *returnSize = numsSize;

    for (int i = 0; i < numsSize; i++) {
        if (nums[i] > 0) {
            int idx = (i + nums[i]) % numsSize;
            result[i] = nums[idx];
        } 
        else if (nums[i] < 0) {
            int idx = (i + nums[i]) % numsSize;
            if (idx < 0)
                idx += numsSize;
            result[i] = nums[idx];
        } 
        else {
            result[i] = nums[i];
        }
    }

    return result;

}
